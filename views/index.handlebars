<div class="row" id="burgerRow">
    <div class="col-12 col-sm-4" id="leftDiv">
        {{#each burgers}}
            {{#unless devoured}}
                {{burger_name}}
                <button class="btn btn-primary btnDevoured"  data-id="{{id}}">Devoured !</button>
                 <br>
            {{/unless}}
           
        {{/each}}
    </div>
    <div class="col-12 col-sm-4">
        <form action="">
            <input type="text" id='txtIput'>
            <button class="btn btn-primary btnSubmit"> Submit</button>
        </form>
    </div>
    <div class="col-12 col-sm-4" id="rightDiv">
        <h2>Burgers all ready devoured</h2>
        {{#each burgers}}
            {{#if devoured}}
                {{burger_name}}
                 <br>
            {{/if}}
           
        {{/each}}
        <br>
    </div>
</div>